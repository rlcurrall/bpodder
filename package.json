{
  "name": "bpodder",
  "version": "0.1.0",
  "description": "GPodder API v2 compatible sync server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "LOG_LEVEL=debug bun run --watch src/index.ts",
    "test": "bun test",
    "update-feeds": "bun run src/index.ts --update-feeds",
    "fmt": "oxfmt",
    "fmt:check": "oxfmt --check"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "oxfmt": "^0.35.0"
  },
  "dependencies": {
    "pino": "^10.3.1",
    "pino-pretty": "^13.1.3",
    "zod": "^4.3.6"
  }
}

{
  "name": "bpodder",
  "version": "0.1.0",
  "description": "GPodder API v2 compatible sync server",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "LOG_LEVEL=debug ENABLE_REGISTRATION=true bun run --watch src/index.ts",
    "test": "bun test",
    "build": "bun run build.ts",
    "update-feeds": "bun run src/index.ts --update-feeds",
    "fmt": "oxfmt",
    "fmt:check": "oxfmt --check",
    "lint": "oxlint --type-aware --type-check",
    "lint:fix": "oxlint --type-aware --type-check --fix",
    "prepare": "husky"
  },
  "dependencies": {
    "bun-plugin-tailwind": "^0.1.2",
    "pino": "^10.3.1",
    "pino-pretty": "^13.1.3",
    "preact": "^10.25.4",
    "preact-router": "^4.1.2",
    "tailwindcss": "^4.2.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.35.0",
    "oxlint": "^1.50.0",
    "oxlint-tsgolint": "^0.15.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "oxfmt",
      "oxlint --type-aware --type-check --fix"
    ]
  }
}
